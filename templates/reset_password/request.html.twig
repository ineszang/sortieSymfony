{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container mx-auto flex px-5 py-24 items-center justify-center flex-col">
            <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
            <h1 class="text-2xl font-bold mb-6 text-center">Réinitialisation du mot de passe</h1>

    {{ form_start(requestForm) }}
        <div class="mb-4">
            {{ form_label(requestForm.mail, 'E-mail : ', {'label_attr': {'class': 'block text-gray-700'}}) }}
            {{ form_widget(requestForm.mail, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
        </div>
        <div>
            <small>
                Entrez votre adresse mail, et nous  vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div><br>

        <button class="w-full bg-pink-600 text-white py-2 rounded-lg hover:bg-pink-700 
                    focus:outline-none focus:ring-2 
                        focus:ring-pink-500 focus:ring-opacity-50" type="submit">Envoyer un lien de réinitialisation</button>
    {{ form_end(requestForm) }}
{% endblock %}
